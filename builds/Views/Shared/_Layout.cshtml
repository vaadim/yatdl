<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8"/>
        <title></title>
        <meta name="viewport" content="width=device-width" />

        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/css/jqueryUI")
        @Scripts.Render("~/bundles/modernizr")

        @RenderSection("Css", false)
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("YATDL", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        @RenderSection("menu", false)
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer class="clearfix">
            <div class="text-center" style="margin: 1em auto 1em auto;">
                &copy; @DateTime.Now.Year, YATDL
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")

        <script type="text/javascript">
            window.appConfig = { userLanguage: "ru" };
        </script>

        @RenderSection("Scripts", false)
    </body>
</html>